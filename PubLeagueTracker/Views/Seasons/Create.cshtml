@model PubLeagueTracker.Models.ViewModels.CreateEditSeasonViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Season</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Season.LeagueId" class="control-label"></label>
                <select asp-for="Season.LeagueId" class="form-control" asp-items="@(new SelectList(Model.Leagues, "LeagueId", "Name"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Season.Name" class="control-label"></label>
                <input asp-for="Season.Name" class="form-control" />
                <span asp-validation-for="Season.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input asp-for="Season.IsActive" class="form-check-input" />
                <label asp-for="Season.IsActive" class="form-check-label"></label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
